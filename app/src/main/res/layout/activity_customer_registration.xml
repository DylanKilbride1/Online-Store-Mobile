<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:id="@+id/customerRegistrationRL"
    tools:context=".activities.CustomerRegistration">

    <EditText
        android:id="@+id/customerRegUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Choose a Username"/>

    <EditText
        android:id="@+id/customerRegEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerRegUsername"
        android:hint="Enter Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/customerRegPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a Password"
        android:layout_below="@id/customerRegEmail"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/cRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customerRegPassword"
        android:text="Register" />

    <Button
        android:id="@+id/custLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cRegistration"
        android:text="Customer Login" />

</RelativeLayout>